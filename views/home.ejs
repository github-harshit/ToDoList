<html>
    <head>
        <title>
            <%= title %>
        </title>
      <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
      
        <div class="container">
            <h1>Todo List </h1>
            <div class="input">

            
            <form action="/create_task" method="post">
                <input type="text" name="desc" id="desc" class="desc" placeholder="What you want to do " required>
                <div class="insideContainer">
                    <select id="category" name="category" class="category" placeholder="Description">
                     <option value="Personal">Personal</option>
                     <option value="Work">Work </option>
                     <option value="Side Hustle">Side Hustle </option>
                     <option value="Fitness">Fitness</option>
                    </select>
                    <input type="date" id="date" name="data" class="date" placeholder="dd/mm/yyyy">
                   
                </div>
                <button type="submit" class="btn" >+ Add Task </button>
            </form>
            </div>
            <div class="result">


            </div>

        </div>
    </body>
</html>